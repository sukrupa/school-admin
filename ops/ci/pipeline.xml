<pipeline name="all">
  <materials>
    <git url="git@github.com:ThoughtWorksDonateNow2/sukrupa.git" />
  </materials>
  <stage name="build">
    <jobs>
      <job name="build">
        <tasks>
          <exec command="./build" />
        </tasks>
        <artifacts>
          <test src="target/reports" />
          <artifact src="target/school-admin.zip" />
        </artifacts>
      </job>
    </jobs>
  </stage>
  <stage name="sonar">
    <jobs>
      <job name="sonar">
        <tasks>
          <exec command="mvn">
            <arg value="sonar:sonar" />
          </exec>
        </tasks>
      </job>
    </jobs>
  </stage>
  <stage name="auto-deploy">
    <jobs>
      <job name="auto-deploy">
        <tasks>
          <exec command="./build" args="deploy:staging" />
        </tasks>
      </job>
    </jobs>
  </stage>
</pipeline>
